<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/app_name"
    android:background="@drawable/gradient"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welocme #username"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="These are your courses for this semester"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/radius"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/it487" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="15dp"
                android:text="Mobile Application Development"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="40dp"
                android:text="IT487"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="70dp"
                android:justificationMode="inter_word"
                android:text="The evolution of computing and IT technologies in the domain of wireless computing has spawned a new horizon of opportunities in the form of mobile smartphone applications. These applications provide users with flexibility, mobility, and enhanced usability features. The future of IT applications can only be secured."
                android:textColor="@color/black"
                android:textSize="8sp" />

            <ImageButton
                android:id="@+id/it487_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="95dp"
                android:background="@drawable/buttons"
                android:contentDescription="@string/app_name"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="10dp"
                android:src="@drawable/downloads"
                android:text="Download content"
                android:textSize="10sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/radius"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/img" />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="15dp"
                android:text="Network Security"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="40dp"
                android:text="IT478"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="70dp"
                android:justificationMode="inter_word"
                android:text="This course offers a comprehensive overview of network security applications and standards, focusing on widely used Internet and corporate networks. It covers topics like physical network security, router mechanisms, enterprise network security, IP security, data center operations protection, and relevant protocols."
                android:textColor="@color/black"
                android:textSize="8sp"/>


            <ImageButton
                android:id="@+id/it478_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="95dp"
                android:contentDescription="@string/app_name"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:src="@drawable/downloads"

                android:background="@drawable/buttons"
                android:padding="10dp"
                android:text="Download content"
                android:textSize="10sp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/radius"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/img_1" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="15dp"

                android:text="Introduction to Cyber Security and Digital Crime"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="40dp"

                android:text="IT474"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="70dp"
                android:justificationMode="inter_word"
                android:text="This course covers cybersecurity basics, including information security principles, computer security, risk assessment, access controls, and cryptography's importance, ensuring information secrecy and protection against major security threats."
                android:textColor="@color/black"
                android:textSize="8sp"/>

            <ImageButton
                android:id="@+id/it474_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="95dp"
                android:contentDescription="@string/app_name"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:src="@drawable/downloads"

                android:background="@drawable/buttons"
                android:padding="10dp"
                android:text="Download content"
                android:textSize="10sp"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/radius"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/img_3" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="15dp"

                android:text="Decision Support Systems"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="40dp"

                android:text="IT475"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="70dp"
                android:justificationMode="inter_word"
                android:text="This course introduces decision support systems (DSS) and their relationship to other computer-based information systems. Topics cover DSS components, development, models, emerging technologies, business intelligence, data analytics, big data, deep learning, and AI-based DSS."
                android:textColor="@color/black"
                android:textSize="8sp" />

            <ImageButton
                android:id="@+id/it475_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="95dp"
                android:background="@drawable/buttons"
                android:contentDescription="@string/app_name"
                android:minWidth="48dp"
                android:minHeight="48dp"

                android:padding="10dp"
                android:src="@drawable/downloads"
                android:text="Download content"
                android:textSize="10sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/radius"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:src="@drawable/img_2"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="15dp"

                android:text="IT Security and Policies"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="40dp"

                android:text="IT476"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="70dp"
                android:justificationMode="inter_word"
                android:text="This course covers information security concepts, issues, trends, resources, and policy roles. Students learn to identify risks, create policies, and implement processes to ensure secure information systems."
                android:textColor="@color/black"
                android:textSize="8sp"/>

            <ImageButton
                android:id="@+id/it476_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="95dp"
                android:contentDescription="@string/app_name"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:src="@drawable/downloads"

                android:background="@drawable/buttons"
                android:padding="10dp"
                android:text="Download content"
                android:textSize="10sp"/>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
</ScrollView>